{
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 120,
  "bracketSpacing": true,
  "trailingComma": "es5",
  "semi": true,
  "endOfLine": "auto",
  "quoteProps": "as-needed",
  "arrowParens": "always",
  "embeddedLanguageFormatting": "off",
  "overrides": [
    {
      "files": ["*.json", "*.scss"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "parser": "angular",
        "printWidth": 120,
        "tabWidth": 2
      }
    }
  ]
}